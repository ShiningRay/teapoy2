- @title = '博聆网 - 有人情味的社区'
- content_for :stylesheets do
  = stylesheet_link_tag 'home'
- content_for :javascripts do
  = javascript_include_tag 'home'
  /[if IE 6]
    = javascript_include_tag 'vendor/dd_belatedpng'
    :javascript
      DD_belatedPNG.fix('#logo');
- content_for :main do
  = image_tag asset_path('tailake/bac.jpg'), :id => 'background', :size => '1024x767', :alt => ''
  %div{:style => "position:absolute; top: 40%;left:50%;width: 710px;height:280px;margin:-140px 0 0 -350px;z-index:10"}
    #logo
      / 放logo
      \
    #title{:style => "margin:0 auto;text-align:center;width:400px;color:#796A56;font-size:16px;margin-bottom: 10px;"}
      / 放网站口号
    #login-form
      / 放登录输入框和按钮
      %form.login{:action => session_path, :method => "post"}
        %input{:type => 'hidden', :value=> form_authenticity_token, :name=>"authenticity_token"}
        .input
          %input.text{:autofocus => "", :name => "user_session[login]", :placeholder => "ID / 邮 箱 / 昵 称", :spellcheck => "false", :tabindex => "1", :autocomplete=>"off"}
        .input
          %input.text{:name => "user_session[password]", :placeholder => "密 码", :tabindex => "2", :type => "password"}
        .submit
          %button{:tabindex => "3", :type => 'submit'}
            %span 登录
        .links
          =link_to signup_path, :class => 'signup' do
            %span 注册
          %span.sep &

          =link_to "新浪微博登录","/syncs/sina/new"
          %span.sep &
          = link_to '逛逛', "/all"

        .actions
          %input#remember_me{:checked => "", :value=>'1', :name => "user_session[remember_me]", :type => "checkbox"}
            %label.remember_me{:for => "remember_me"} 记住我
            %span.middot ·
            %a.reset{:href => new_password_reset_path} 忘记密码？

= render_skeleton