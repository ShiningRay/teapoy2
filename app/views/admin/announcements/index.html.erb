<h1>Listing announcements</h1>

<table>
  <tr>
    <th>Content</th>
  </tr>

<% @announcements.each do |announcement| %>
  <tr>
    <td><%=h announcement.content %></td>
    <td><%= link_to 'Show', admin_announcement_path(announcement) %></td>
    <td><%= link_to 'Edit', edit_admin_announcement_path(announcement) %></td>
    <td><%= link_to 'Destroy', admin_announcement_path(announcement), :data => {:confirm => 'Are you sure?'}, :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New announcement', new_admin_announcement_path %>