<% if @post.new_record? %>
alert("发表失败：<%= @post.errors.full_messages %>");
<% else %>
$('ul.posts').append('<%= j render(@post) %>');
$('#post_content').val('');
$('#post_parent_id').val('');
var editor = $('#post_content').data('editor');
if(editor) editor.setValue('');
$('.relativetime').timeago('refresh');
$('.attachment_ids').remove();
if (_hmt) {
    _hmt.push(['_trackEvent', 'topics', 'reply', <%= @post.topic_id %>]);
};
<% end %>