-# http://paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither
-ie_html :class => 'no-js' do
  = include_head
  %body{ :lang => 'en', :class => "#{controller.controller_name} two-col" }
    %header#header
      = render 'new_header'
    #container.container
      #main{ :role => 'main' }
        = show_flash
        %div#content= yield
      %div#sidebar
        = render 'sidebar'
    %footer#footer
      = render 'footer'
    -# Javascript at the bottom for fast page loading
    = include_javascripts

