ENV['RAILS_ENV'] ||= 'production'
RAILS_ENV= ENV['RAILS_ENV']
ROOT = ENV['ROOT'] = File.expand_path('../', __FILE__)

if !ENV['ROLES']
  ENV['ROLES'] = if File.exists?('ROLES')
    IO.read('ROLES').chomp
  else
    'app'
  end
end

ROLES = ENV['ROLES'].split(',')

Eye.load("#{ROOT}/config/eyes/#{RAILS_ENV}.rb")
