- top_post = @article.try(:top_post)
%p.error=flash[:error]
- if top_post && top_post.errors
  - @article.top_post.errors[:base].each do |error|
    %p.error=error
-# if @article && @article.top_post && @article.top_post.errors
=# @article.top_post.errors
- @article.created_at ||= Time.now if @article
#new_article_form
  = semantic_form_for(@article, :url => @article.new_record? ? (@group ? articles_path(@group) : {:controller => 'articles', :action => 'create'}) : [@group, @article],:html=>{:multipart => true} ) do |f|
    = f.input :status, :as => :hidden if @article.new_record? and logged_in? and (current_user.is_admin? or (@group && current_user.own_group?( @group)))
    = f.inputs do
      - unless @group
        - groups = current_user.publications(Group)
        = f.input :group, :label => '小组', :as => :select, :collection => groups, :include_blank => false, :prompt => '请选择一个小组'
        - if groups.size == 0
          您还没加入任何小组，
          = link_to '赶紧去找一个找自己喜欢的吧', groups_path

      = f.input :title, :label => '标题', :required => false, :hint => '标题可以省略',:input_html =>{:value=>params[:title] || @article.title}
    - if logged_in?
      = f.fields_for :top_post do |top_post_form|
        = render :partial => 'posts/omni_form', :object => top_post_form
    - else
      = f.input :content, :as => :text, :label => '正文'
    = f.inputs do
      =# f.input :created_at, :label => '时间', :as => :datetime, :default => Time.now if logged_in? and (current_user.is_admin? or  current_user.is_publisher?)
    = f.input :uncommentable, :label => '禁止评论', :as => :boolean, :default => false
    = f.input :anonymous, :label => '匿名发表（花费20积分）' if logged_in?
    = f.inputs :id => :picture_attachment_fields, :for => :attachments do |attachment_form|
      = attachment_form.input :type, :as => :hidden, :value => 'Picture'
      = attachment_form.input :picture, :as => :file
    = f.actions do
      = f.action :submit, :label => @article.new_record? ? '发布' : '修改', :button_html => {data:{disable_with: '正在发布...'}}
- content_for :javascripts do
  :javascript
    $(function(){
      $('#article_group_id').select2({width: '300px'})
    })
