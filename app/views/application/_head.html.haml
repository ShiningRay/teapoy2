%head
  = NewRelic::Agent.browser_timing_header rescue ""
  %meta{ :charset => "utf-8" }/
  = page_title
  = meta_keywords
  = meta_description
  %link(rel="profile" href="http://microformats.org/profile/hcard")
  %link(rel="profile" href="http://ufs.cc/x/hatom")

  -#
    Always force latest IE rendering engine (even in intranet) & Chrome Frame
    Remove this if you use the .htaccess
  %meta{ :content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible" }/
  - if @author
    %meta{ :content => @author, :name => "author" }/
  %meta( name="baidu-tc-verification" content="423fab6f7748db6e9085019a9e82cff9" )

  -# Mobile viewport optimized: j.mp/bplateviewport
  %meta{ :content => "width=device-width, initial-scale=1.0, maximum-scale=1", :name => "viewport" }/

  -# Place favicon.ico and apple-touch-icon.png in the root of your domain and delete these references

  %link{ :href => "/favicon.ico", :rel => "shortcut icon" }/
  %link{ :href => "/apple-touch-icon.png", :rel => "apple-touch-icon" }/

  = render 'stylesheets'

  -# All JavaScript at the bottom, except for Modernizr which enables HTML5 elements & feature detects
  = javascript_include_tag 'http://ajax.aspnetcdn.com/ajax/modernizr/modernizr-2.0.6-development-only.js'

  = csrf_meta_tag
  = yield :head
