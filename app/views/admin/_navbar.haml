.navbar.navbar-default{'role' => 'navigation'}
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{'type' => 'button', "data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to Setting.site_name || 'Admin', admin_dashboard_path, :class => 'navbar-brand brand'
    .collapse.nav-collapse
      %ul.nav.navbar-nav
        %li
          %a{:href => "/admin/statistic/stats"} 查看统计信息
        %li{:class => current_page?(admin_badges_path) && 'active'}= link_to t('activerecord.models.badge'), admin_badges_path
        %li{:class => current_page?(admin_groups_path) && 'active'}
          = link_to t('activerecord.models.group'), admin_groups_path
        %li{:class => current_page?(admin_users_path) && 'active'}
          = link_to t('activerecord.models.user'), admin_users_path
        %li{:class => current_page?(admin_frontpage_path) && 'active'}
          = link_to 'frontpage', admin_frontpage_path

      %ul.nav.navbar-nav.navbar-right
        %li
          = link_to current_user.login, [:admin, current_user]
        %li= link_to("退出", logout_path)
