<h2>最新动态</h2>
<ul>
<% if @comments; for c in @comments;next unless topic = c.topic; %>
  <li id="comment_<%=c.id%>">
  <span class="user"><%=h @user.login %></span> <span class="time">
  <%= c.created_at.strftime("%Y-%m-%d %H:%M:%S") %></span><br />
  @<%= link_to "#{topic.group.name}#{topic.id}", topic_path(topic) %>
   <%=h c.content%>
</li>
<% end; end %>
</ul>
<%= will_paginate @comments if @comments%>