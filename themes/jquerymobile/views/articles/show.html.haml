- content_for :title, "#{article_title} - #{@group.name}"

- group = @group || @article.group

%div{:data => {:role => 'header', 'position' => 'fixed'}}
  = link_to "Back", [@group, :articles], 'data-icon' => 'carat-l', 'data-rel' => 'back', 'data-iconpos' => 'notext'
  %h1= @group.name
  = link_to 'Options', "#options_#{@article.id}", data: {icon: 'gear', rel: 'popup', iconpos: 'notext'}

%div{:data => {:role => 'content'}}
  - if @article
    - @comments = @article.comments
    = render @article
    %div{:data => {:role => 'collapsible'}}
      = render 'rewards_info'
    = render( 'comments/index')

%div{:id => "options_#{@article.id}", :data => {:role => 'popup', :'position-to' => 'window', :'overlay-theme' => 'b'}}
  %ul{:data => {:role => 'listview'}, :style => 'min-width: 210px;'}
    - if logged_in? && (current_user.own_group?(group) || current_user.own_article?(@article) || current_user.is_admin?)
      %li
        = link_to [group, @article], :method => :delete, :remote => true do
          删除
      %li
        = render 'subscribe_button'
